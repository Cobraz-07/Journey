---
import "../styles/global.css"
import BaseHead from "../components/BaseHead.astro";
const { title } = Astro.props;
---
<html lang="en" class="jakarta text-[var(--text-color)] scroll-smooth selection:bg-accent-500 selection:text-white">
    <head>
        <BaseHead title={title}/>
    </head>
    <body class="bg-white flex flex-col min-h-svh h-auto">
        <main class="grow">
            <slot />
        </main>
    </body>
</html>