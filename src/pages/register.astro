---
import BaseLayout from "../layouts/BaseLayout.astro";
import BackBTN from "../components/global/headers/BackBTN.astro";
import JourneySimple from "../components/global/headers/JourneySimple.astro";
import RegisterForm from "../components/forms/RegisterForm.astro";
import BackLink from "../components/forms/BackLink.astro";
---

<BaseLayout title="Journey | Sign Up">
    <BackBTN href="/" />
    <JourneySimple />
    <RegisterForm title="Create your account" apiTitle="Sign Up" api="register" labelStyle="mb-2 font-medium" inputStyle="rounded-[12px] mb-6 h-14 p-4 text-[16px] bg-[#EBF0EB]" />
    <BackLink href="/signin" text="Already have an account? Sign in"/>
</BaseLayout>